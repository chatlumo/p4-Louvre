{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'app.progress.step1'|trans }}{% endblock %}

{% block body %}
    {% if form is defined %}
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <input type="submit" value="{{ 'app.step1.submit'|trans }}"
               class="btn btn-danger" />
        {{ form_end(form) }}
    {% endif %}
{% endblock %}
